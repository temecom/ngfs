type Person {
    id: ID!
    givenName: String!
    surName: String!
}
type Query {
	person(id: ID): Person!
	peopleWithSurName(surName: String): [Person]!
	people: [Person]!
}


input PersonInput {
	id: ID
    givenName: String!
    surName: String!
}

type PersonMutation {
	createPerson(personInput: PersonInput): Person!
	updatePerson(personInput: PersonInput): Person!
}

schema {
   query: Query
   mutation: PersonMutation
}