type Person {
    id: ID!
    givenName: String!
    surName: String!
}
type Query {
	person(id: ID): Person!
	peopleWithSurName(surName: String): [Person]!
	people: [Person]!
}


input CreatePersonInput {
    givenName: String!
    surName: String!
}

type PersonMutation {
	createPerson(person: CreatePersonInput): Person!
}

schema {
   query: Query
   mutation: PersonMutation
}